<!DOCTYPE html>
<html>
  <head>
    <title>ChitChat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <% if current_user %>
          Welcome back, <%= current_user.email %> <%= link_to "Log Out", logout_path, method: 'delete', class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
        <%= link_to "Sign In", new_session_path, class: "btn btn-primary" %>
      <% end %>
    </div>
    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <div class="alert alert-danger">
          <%= value %>
        </div>
        <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
