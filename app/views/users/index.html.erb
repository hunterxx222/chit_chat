<table class="table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Add friend</th>
  </thead>
  <tbody>
<% @user.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <%=link_to "Add Friend", friendships_path(:friend_id => user), :method => :post, class: "btn btn-primary" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
