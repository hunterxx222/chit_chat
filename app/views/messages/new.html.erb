<%= form_for [@message], :html => { :class => "form-group" } do |f| %>
  <%= f.label :recipient_id %>
  <%= f.select :recipient_id, @users.map{|u| [u.email, u.id]}, {}, {class: "form-control"} %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body, :class =>'form-control' %> <br>
  <%= f.submit 'Send', :class => 'btn btn-primary' %>
<% end %>
