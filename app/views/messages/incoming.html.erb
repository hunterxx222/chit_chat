<h1>Incoming Messages</h1>
<p>You have <%= @incoming_messages.size%> messages</p>
<table class="table table-sm">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
      <% @incoming_messages.each do |message| %>
        <tr>
          <td><%= message.sender %></td>
          <td><%= message.recipient %></td>
          <td><%= message.subject %></td>
          <td><%= message.body %></td>
        </tr>
      <% end %>
  </tbody>
</table>
